<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TopDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@android:id/list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopDetails"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="Title:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/titledisplaytext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView4" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titledisplaytext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Details:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detailsdisplaytext"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView5" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsdisplaytext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="URL:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/urlTextView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/textView6"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView6"
        android:textColor="@color/link" />



</RelativeLayout>